{% extends 'base.html.twig' %}

{% block title %}Курсы{% endblock %}

{% block body %}
<div class="container">
    <h1 class="fw-bolder">Курсы</h1>

    <table class="table">
        
        
            <div class="row gx-5">
                {% for course in courses %}
                <div class="col-md-6">
                    <div class="card p-1 m-3">
                        <div class="card-body">
                            <h3>{{ course.name }}</h3>                       
                            <p>{{ course.description }}</p>
                            <a class="btn btn-primary link-course" href="{{ path('app_course_show', {'id': course.id}) }}">
                                Пройти курс
                            </a>
                        </div>
                    </div>
                </div>
            
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </div>        
        </div>    
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_course_new') }}">Новый курс</a>
{% endblock %}
